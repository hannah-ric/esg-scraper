# ESG Scraper Environment Variables Example
# Copy this file to .env and fill in your values

# Application URL (set by DigitalOcean)
APP_URL=https://your-app.ondigitalocean.app

# Environment
ENVIRONMENT=development

# Security
JWT_SECRET=your-secure-random-jwt-secret-here

# MongoDB Configuration (DigitalOcean Managed Database)
MONGODB_URI=mongodb+srv://doadmin:password@cluster.mongodb.ondigitalocean.com/admin?authSource=admin&tls=true
MONGODB_DATABASE=admin

# MongoDB Connection Pool
MONGODB_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=5

# Upstash Redis Configuration
UPSTASH_REDIS_URL=rediss://default:password@endpoint.upstash.io:6379
UPSTASH_REDIS_REST_URL=https://endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-rest-token

# API Configuration
FREE_TIER_CREDITS=100
LOG_LEVEL=INFO
WORKERS=1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here

# AI API Keys (optional, for future features)
OPENAI_KEY=sk-your-openai-key
ANTHROPIC_KEY=sk-ant-your-anthropic-key

# Error Tracking (optional)
SENTRY_DSN=

# DigitalOcean Configuration (for deployment)
DIGITALOCEAN_ACCESS_TOKEN=dop_v1_your_token
DO_REGISTRY_NAME=your-registry-name
