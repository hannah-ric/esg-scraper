# ESG Scraper Environment Variables Example
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development

# Security
JWT_SECRET=your-secret-key-here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/esg_scraper
MONGODB_DATABASE=esg_scraper
MONGODB_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=5

# Redis Configuration
UPSTASH_REDIS_URL=redis://localhost:6379

# API Configuration
FREE_TIER_CREDITS=100
LOG_LEVEL=INFO
WORKERS=1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=sk_test_your_key_here

# Sentry Configuration (optional)
SENTRY_DSN=

# Slack Webhook (optional)
SLACK_WEBHOOK_URL=

# DigitalOcean Configuration (for deployment)
DIGITALOCEAN_ACCESS_TOKEN=
DO_REGISTRY_NAME=

# Upstash Redis (for production)
UPSTASH_UPSTASH_REDIS_URL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
